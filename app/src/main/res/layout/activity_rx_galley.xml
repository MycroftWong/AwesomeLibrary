<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.selector.RxGalleyActivity">

    <include layout="@layout/common_toolbar" />

    <TextView
        android:id="@+id/chooseLabelText"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/common_padding_start_end"
        android:paddingEnd="@dimen/common_padding_start_end"
        android:text="@string/hint_drag_image"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintTop_toBottomOf="@id/chooseLabelText"
        app:spanCount="3" />

    <Button
        android:id="@+id/chooseSingleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_single"
        app:layout_constraintTop_toBottomOf="@id/recyclerView" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/draweeView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/common_padding_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chooseSingleButton"
        app:placeholderImage="@drawable/bg_placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>