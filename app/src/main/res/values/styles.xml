<resources>

    <style name="QDTopBar" parent="TitleBarView.TopBar">
        <item name="titlebar_bg_color">@color/colorAccent</item>
        <item name="titlebar_title_text_size">16sp</item>
        <item name="titlebar_title_color">@android:color/white</item>
        <item name="titlebar_subtitle_color">@color/config_color_white</item>
        <item name="titlebar_text_btn_color_state_list">@android:color/black</item>
        <item name="titlebar_image_btn_height">48dp</item>
    </style>

    <style name="TitleBarActivityTheme" parent="AppTheme">
        <!--标题栏主题样式-->
        <item name="TitleBarStyle">@style/QDTopBar</item>
        <!--设置标题栏高度-->
        <item name="titlebar_height">56dp</item>
    </style>
</resources>
