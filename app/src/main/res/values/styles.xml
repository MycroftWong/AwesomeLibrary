<resources>

    <style name="QDTopBar" parent="CustomTitleBar.TopBar">
        <item name="titlebar_bg_color">@android:color/white</item>
        <item name="titlebar_title_text_size">18dp</item>
        <item name="titlebar_title_color">@color/common_text_color</item>
        <item name="titlebar_subtitle_color">@color/config_color_white</item>
        <item name="titlebar_text_btn_color_state_list">@android:color/white</item>
        <item name="titlebar_image_btn_height">44dp</item>
    </style>

    <style name="TitleBarActivityTheme" parent="AppTheme">
        <!--标题栏主题样式-->
        <item name="CustomTitleBarStyle">@style/QDTopBar</item>
        <!--设置标题栏高度-->
        <item name="titlebar_height">44dp</item>
        <item name="alpha_pressed">0.6</item>
    </style>
</resources>
